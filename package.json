{
  "name": "quotaguard",
  "version": "0.1.0",
  "private": true,
  "description": "Distributed multi-tenant rate limiting and quota service",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "engines": {
    "node": ">=20"
  },
  "scripts": {
    "build": "npm run build -w @quotaguard/shared && npm run build -w @quotaguard/api",
    "dev": "npm run dev -w @quotaguard/api",
    "start": "npm run start -w @quotaguard/api",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint .",
    "typecheck": "tsc -b --pretty false",
    "load": "tsx scripts/load.ts"
  },
  "devDependencies": {
    "@eslint/js": "^9.18.0",
    "@types/node": "^22.12.0",
    "eslint": "^9.18.0",
    "globals": "^15.14.0",
    "tsx": "^4.19.2",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.20.0",
    "vitest": "^2.1.8"
  },
  "dependencies": {
    "autocannon": "^8.0.0"
  }
}
